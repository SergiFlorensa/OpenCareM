APP_NAME=Task Manager API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=docker
API_V1_PREFIX=/api/v1

SECRET_KEY=change-me-for-non-local-envs-1234567890
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

DATABASE_URL=postgresql+psycopg2://taskmanager:taskmanager@db:5432/taskmanager
DATABASE_ECHO=false

REDIS_URL=redis://localhost:6379/0
BACKEND_CORS_ORIGINS=["http://localhost:8000","http://localhost:5173","http://127.0.0.1:5173"]
LOG_LEVEL=INFO
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
CLINICAL_CHAT_WEB_ENABLED=true
CLINICAL_CHAT_WEB_TIMEOUT_SECONDS=6
CLINICAL_CHAT_WEB_STRICT_WHITELIST=true
CLINICAL_CHAT_WEB_ALLOWED_DOMAINS=who.int,cdc.gov,nih.gov,pubmed.ncbi.nlm.nih.gov,scielo.org,nejm.org,thelancet.com,bmj.com,jamanetwork.com,seimc.org,semicyuc.org,semes.org,guiasalud.es,openevidence.com
CLINICAL_CHAT_REQUIRE_VALIDATED_INTERNAL_SOURCES=true
CLINICAL_CHAT_LLM_ENABLED=true
CLINICAL_CHAT_LLM_PROVIDER=ollama
CLINICAL_CHAT_LLM_BASE_URL=http://host.docker.internal:11434
CLINICAL_CHAT_LLM_MODEL=llama3.1:8b
CLINICAL_CHAT_LLM_TIMEOUT_SECONDS=15
CLINICAL_CHAT_LLM_MAX_OUTPUT_TOKENS=700
CLINICAL_CHAT_LLM_TEMPERATURE=0.2
CLINICAL_CHAT_LLM_NUM_CTX=4096
CLINICAL_CHAT_LLM_TOP_P=0.9
